<div class="container">
  <%= form_for @order, html: {class: "form"} do |f| %>
    <div class="row">
      <div class="form-group">
        <%= f.label :status_id, class: "ks-pink-txt" %>
        <%= f.text_field :status_id, class: "form-control" %>

        <%= f.label :user_id, class: "ks-pink-txt" %>
        <%= f.text_field :user_id, class: "form-control" %>
      </div>
    </div>
    <div class="row">
      <%= f.submit %>
    </div>
  <% end %>
</div>