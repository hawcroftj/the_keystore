<div class="container">
  <h1><%= @category.name.pluralize %></h1>

  <table class="table">
    <% @category.products.each_slice(3) do |slice_3_products| %>
      <tr>
        <% slice_3_products.each do |product| %>
          <td class="col-md-3 ">
            <%= render partial: 'products/product', object: product,
                       locals: { more_info_link: true, index_link: false,
                                 full_desc: false, add_to_cart: true } %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </table>
</div>