<div class="container">
  <h1>Categories</h1>
  <table class="table">
    <% @categories.each_slice(2) do |slice_2_categories| %>
      <tr>
        <% slice_2_categories.each do |category| %>
          <td class="col-md-3">
            <h4>
              <%= link_to category.name, category %>
              (<%= category.products.count %>)
            </h4>
            <p><%= category.description %></p>
          </td>
        <% end %>
      </tr>
    <% end %>
  </table>
</div>